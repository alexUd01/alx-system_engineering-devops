#!/usr/bin/env bash
# A bash script that transferes a file from our client to a server

FILE="$1"
IP="$2"
USERNAME="$3"
PATH_TO_SSH_KEY="$4"

if [ "$#" -lt "3" ]; then
    echo 'Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY';
else
    if [[ "$PATH_TO_SSH_KEY" -ne "" ]]; then
	ssh-add "$PATH_TO_SSH_KEY";
    else
	ssh-add
    fi
    scp -o StrictHostKeyChecking=no "$FILE" "$USERNAME@$IP":~;
fi
